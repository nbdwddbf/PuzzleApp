<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="益智语音训练"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_"
        android:layout_marginRight="@dimen/margin_"
        android:textSize="@dimen/txt_size" />

    <Button
        android:id="@+id/buttonIse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立刻体验语音评测"
        android:textSize="@dimen/btn_size"
        />

    <Button
        android:id="@+id/buttonIat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立刻体验语音听写"
        android:textSize="@dimen/btn_size"
        />

    <Button
        android:id="@+id/buttonIknow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立刻体验语义理解"
        android:textSize="@dimen/btn_size"
        />

    <Button
        android:id="@+id/buttonWake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立刻体验语音唤醒"
        android:textSize="@dimen/btn_size"
        />


</LinearLayout>